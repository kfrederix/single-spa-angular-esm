{
  "name": "app-shell",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/app-shell/src",
  "tags": [],
  "targets": {
    "build": {
      "dependsOn": ["build-shared-deps"],
      "executor": "@nx/vite:build",
      "options": {
        "configFile": "apps/app-shell/vite.config.ts",
        "outputPath": "dist/apps/app-shell",
        "skipTypeCheck": true
      },
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "watch": true,
          "mode": "development"
        },
        "production": {
          "watch": false
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "build:development",
        "port": 4300
      },
      "dependsOn": ["build"]
    },
    "build-shared-deps": {
      "executor": "nx:run-commands",
      "inputs": [
        { "fileset": "{projectRoot}/**/*" },
        { "fileset": "{workspaceRoot}/libs/import-maps/**/*.ts" },
        { "fileset": "{workspaceRoot}/tools/import-map/**/*.ts" },
        { "fileset": "{workspaceRoot}/package.json" }
      ],
      "options": {
        "command": "pnpm jiti tools/shared-dependencies/build-shared-dependencies.ts"
      }
    }
  }
}
