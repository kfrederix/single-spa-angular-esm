{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@single-spa-angular-esm/shared-ng": ["libs/shared/shared-ng/src/index.ts"],
      "@single-spa-angular-esm/shared-utils": ["libs/shared/utils/src/index.ts"],
      "@single-spa-angular-esm/template-plugin": ["packages/template-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
